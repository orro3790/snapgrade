{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "allowJs": true,
        "declaration": false,
        "removeComments": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "*": ["../../../node_modules/*"]
        }
    },
    "include": [
        "./*.ts",
        "../schemas/*.ts"
    ]
}